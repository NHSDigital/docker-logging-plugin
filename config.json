{
	"description": "splunklog as plugin",
	"documentation": "-",
	"entrypoint": ["/usr/bin/splunk-log-driver"],
    "network": {
        "type": "host"
    },
	"linux": {
		"capabilities": ["CAP_SYS_ADMIN"]
	},
	"interface": {
		"types": ["docker.logdriver/1.0"],
		"socket": "splunklog.sock"
	},
	"env": [
		{
			"name": "LOG_LEVEL",
			"description": "Set log level to output for plugin logs",
			"value": "info",
			"settable": ["value"]
		}
	]
}